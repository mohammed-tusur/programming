<UserControl x:Class="View.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Controls"
             xmlns:viewModel="clr-namespace:View.ViewModel"
             DataContext="{StaticResource MainVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <viewModel:MultiValidationConverter x:Key="MultiValidationConverter"/>
        <Style x:Key="ErrorTextBoxStyle" TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="Background" Value="#ff9595"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <DockPanel Margin="3">
            <Image Source="\Assets\user_icon.png" Width="100" Height="100" VerticalAlignment="Top" Margin="3"></Image>
            <StackPanel>
                <TextBlock Margin="3">Name:</TextBlock>
                <TextBox x:Name="NameTextBox" Margin="3" Text="{Binding CurrentContact.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 IsReadOnly="{Binding IsReadOnly}" Style="{StaticResource ErrorTextBoxStyle}" Validation.ErrorTemplate="{x:Null}" ToolTip="{Binding (Validation.Errors)[0].ErrorContent, ElementName=NameTextBox}"/>
                
                <TextBlock Margin="3">Phone Number:</TextBlock>
                <TextBox x:Name="PhoneTextBox" Margin="3" Text="{Binding CurrentContact.Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 IsReadOnly="{Binding IsReadOnly}" Style="{StaticResource ErrorTextBoxStyle}" Validation.ErrorTemplate="{x:Null}" ToolTip="{Binding (Validation.Errors)[0].ErrorContent, ElementName=PhoneTextBox}"
                PreviewTextInput="PhoneTextBox_PreviewTextInput" DataObject.Pasting="PhoneTextBox_Pasting"/>
                
                <TextBlock Margin="3">Email:</TextBlock>
                <TextBox x:Name="EmailTextBox" Margin="3" Text="{Binding CurrentContact.Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 IsReadOnly="{Binding IsReadOnly}" Style="{StaticResource ErrorTextBoxStyle}" Validation.ErrorTemplate="{x:Null}" ToolTip="{Binding (Validation.Errors)[0].ErrorContent, ElementName=EmailTextBox}"/>

                <Button Content="Apply" Width="75" Height="25" Margin="0,50,0,0" HorizontalAlignment="Left" Command="{Binding ApplyCommand}"
                Visibility="{Binding IsVisibile, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Button.IsEnabled>
                        <MultiBinding Converter="{StaticResource MultiValidationConverter}">
                            <MultiBinding.Bindings>
                                <Binding ElementName="NameTextBox" Path="(Validation.HasError)"/>
                                <Binding ElementName="PhoneTextBox" Path="(Validation.HasError)"/>
                                <Binding ElementName="EmailTextBox" Path="(Validation.HasError)"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </Button.IsEnabled>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
