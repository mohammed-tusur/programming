<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:userControls="clr-namespace:View.Controls"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="800" Icon="\Assets\favicon.ico">

    <Window.Resources>
        <DataTemplate x:Key="contactTemplate">
            <DockPanel>
                <Image Width="35" Height="36" VerticalAlignment="Top" Source="/Assets/user_icon.png"></Image>
                <StackPanel>
                    <TextBlock Text="{Binding Name}" FontWeight="DemiBold"></TextBlock>
                    <TextBlock Text="{Binding Phone}" FontSize="10"></TextBlock>
                </StackPanel>
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
        
        <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="31"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" Margin="3" ItemsSource="{Binding Contacts}"
                 SelectedItem="{Binding CurrentContact}" 
                 ItemTemplate="{StaticResource contactTemplate}">
        </ListBox>

        <UniformGrid Grid.Column="0" Grid.Row="1" Rows="1">
            <Button Content="Add" Width="Auto" Height="25" Margin="3" Command="{Binding AddCommand}"/>
            <Button Content="Edit" Width="Auto" Height="25" Margin="3" Command="{Binding EditCommand}"/>
            <Button Content="Remove" Width="Auto" Height="25" Margin="3" Command="{Binding RemoveCommand}"/>
        </UniformGrid>

        <GridSplitter Grid.Column="1" Grid.RowSpan="2" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

        <Grid Grid.Column="2" Grid.RowSpan="2">
            <userControls:ContactControl/>
        </Grid>
    </Grid>
</Window>